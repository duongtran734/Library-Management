@model LibraryManagment.Models.ViewModels.CheckoutModels

@{
    ViewData["Title"] = "Hold";
}

<h1>Place Hold</h1>
<div class="container">
    <h2>Checkout Library Item</h2>
    <div class="jumbotron">
        <div class="col-md-3">
            <div>
                <p>@Model.Title</p>
                <img src=@Model.ImgUlr alt="img" />
            </div>
        </div>
        <div class="col-md-9">
            @using(Html.BeginForm("PlaceHoldItem", "Checkouts", FormMethod.Post))
            {
                @Html.HiddenFor(a=>a.AssetId)
                <div>
                    There are currently @Model.HoldCount for this item.
                    Please insure a Library card ID:
                    @Html.TextBoxFor(a=>a.LibraryCardId)
                </div>
                <div class="form-group">
                    <input type="submit" value="Place Hold" class="btn btn-primary" />
                </div>
            }
        </div>
    </div>
</div>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
